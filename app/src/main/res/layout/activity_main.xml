<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.custom.emptylayout.MainActivity"
    >
    
    <Button
        android:id="@+id/tv_frame_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FrameEmptyLayout"
        android:layout_marginTop="@dimen/dimen_100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    
    <Button
        android:id="@+id/tv_linear_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LinearEmptyLayout"
        android:layout_marginTop="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_frame_empty"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    
</android.support.constraint.ConstraintLayout>
